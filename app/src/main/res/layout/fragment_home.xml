<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/clapperboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/clapperboard_logo_of_the_app" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="@string/introduction"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <Button
                android:background="@drawable/button_background"
                app:backgroundTint="@null"
                android:id="@+id/button_assets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/assets"
                android:textSize="20sp"
                app:icon="@drawable/baseline_people_24" />

            <Button
                android:background="@drawable/button_background"
                app:backgroundTint="@null"
                android:id="@+id/button_scenes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scenes"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                app:icon="@drawable/baseline_list_24" />

            <Button
                android:background="@drawable/button_background"
                app:backgroundTint="@null"
                android:id="@+id/button_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calendar"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                app:icon="@drawable/baseline_calendar_month_24" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>